<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20.0" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.project.CtrlLayoutDisconnected">
    <padding>
        <Insets top="50.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <VBox spacing="10.0" alignment="CENTER">
        <Label text="Server IP" style="-fx-font-size: 16; -fx-font-weight: 200;"/>
        <TextField fx:id="ipTextField" maxWidth="200.0"/>
    </VBox>

    <VBox spacing="10.0" alignment="CENTER">
        <Label text="Server port" style="-fx-font-size: 16; -fx-font-weight: 200;"/>
        <TextField fx:id="portTextField" maxWidth="200.0"/>
    </VBox>

    <Button text="Connect" onAction="#connectToServer" minWidth="96.0" minHeight="32.0" style="-fx-font-size: 14;"/>
</VBox>
